<!DOCTYPE html>
<html>
  <head>
    <title>Task Management WebApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav class="navbar navbar-inverse">
  		<div class="container-fluid">
    		<div class="navbar-header">
      			<a class="navbar-brand" href=<%=root_path %>>Task Management WebApp</a>
    		</div>
    		<ul class="nav navbar-nav">
      				<% if user_signed_in? %>
                <li><a href=<%= tasks_path %>>View Tasks</a></li>
      					<li><a href=<%= new_task_path %>>Add Task</a></li>
      				<% end %> 
    		</ul>
    		<ul class="nav navbar-nav navbar-right">
    			<% if user_signed_in? %>
					<li><%= link_to('Logout', destroy_user_session_path, method: :delete) %>  </li> 
      			<% else %>
      				<li><a href=<%= new_user_registration_path %>><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      				<li><a href=<%= new_user_session_path %>><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
      			<% end %>
    		</ul>
  		</div>
	</nav>


  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
